  <changeSet id="MODELINKS-141@@create-authority-heading_type-index" author="Mukhiddin_Yusupov">
    <preConditions onFail="MARK_RAN">
      <not>
        <indexExists indexName="idx_authority-heading_type" tableName="authority"/>
      </not>
    </preConditions>

    <comment>Create B-tree index for heading_type in authority</comment>

    <createIndex tableName="authority" indexName="idx_authority-heading_type">
      <column name="heading_type"/>
